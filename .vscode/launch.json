{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "venus",
            "request": "launch",
            "name": "Debug Current File",
            "program": "${file}",
            "stopOnEntry": true,
            "openViews": []
        },
        {
            "name": "RISC-V Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/your_program.elf",  // Your compiled program
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/path/to/riscv-gdb",  // Path to your RISC-V GDB
            "setupCommands": [
                {
                    "description": "Connect to target",
                    "text": "target remote localhost:1234",
                    "ignoreFailures": false
                }
            ]
        }
    ]
}